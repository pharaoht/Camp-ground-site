<%- include("partials/header") %>

<div class="container">
<header class="jumbotron">
  <div class="container">
    <h1>Welcome to Yelp Camp</h1>
    <p>View hand-picked campgrounds from all over the world</p>
    <p><a class="btn btn-primary btn-large" href="/campgrounds/new">Add new campground</a></p>
  </div>
</header>

<div class="row" style="display:flex; flex-wrap: wrap;">
<% campgrounds.forEach(function(campgrounds){ %>
  <div class="col-md-3 col-sm-6">
    <div class="thumbnail">
      <img class="img" src="<%= campgrounds.image %>" >
      <style>
        .img{
          height:200px;
          weight:200px;
        }
      </style>
        <div class="caption">
          <h4><%=campgrounds.name %></h4>
        </div>
        <p><a class="btn btn-primary" href="/campgrounds/<%= campgrounds._id %>">More Info</a></p>

    </div>
  </div>

<%}); %>
</div>



</div>
<%- include("partials/footer") %>
